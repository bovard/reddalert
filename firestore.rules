rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User's post status subcollection (tracks dismissed/responded)
      match /postStatus/{postId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // User's settings subcollection (includes subscriptions)
      match /settings/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Shared posts cache - readable by any authenticated user
    match /posts/{postId} {
      allow read: if request.auth != null;
      // Only cloud functions can write (no client write access)
    }
  }
}
